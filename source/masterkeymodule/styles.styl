// acceptcodeframe styles
button-size = 40px

.no-master-key
    #setmasterkeyframe
        z-index: 20
        opacity 1
        pointer-events: all

#setmasterkeyframe
    position relative
    padding 30px
    width 100%
    height 100%
    box-sizing: border-box
    z-index 0
    opacity: 0
    transition opacity 0.3s
    background-color #000c
    pointer-events: none
    display: flex
    flex-direction: column
    justify-content: space-between
    h1
        font-size: 24pt
        text-align: right
        // text-decoration: underline
    label
        font-size 12pt
        display block
        text-align: left
        margin-bottom 5px
    input
        display block
        font-size 16pt
        padding 12px
        box-sizing: border-box
        text-align: center
        width 100%
        background alpha(#024, 0.5)
        color #fff
        border-bottom solid 2px rgb(0, 64, 133)
    input.okay
        border-bottom solid 2px rgb(13, 133, 0)
    input.error
        border-bottom solid 2px rgb(133, 0, 0)
    input.typing
        border-bottom solid 2px rgb(133, 51, 0)
    
    #key-id-display
        font-size: 10pt
        padding 20px 12px
        overflow hidden
        text-overflow: ellipsis
        margin-bottom 10px
        background-color #000
        margin-bottom 20px
    .passive
        opacity 0.2
        pointer-events: none


#accept-button
    margin-top 50px
    width 200px
    font-size: 20pt
    padding 12px
    box-sizing: border-box
    position: relative
    cursor: pointer
    background-color #024c
    border-radius: 20px
    svg
        position absolute
        top 0
        right 20px
        width: 40px
        height: 40px